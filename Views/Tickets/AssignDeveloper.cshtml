@model TheBugTracker.Models.ViewModels.AssignDeveloperViewModel



<div>

    <div class="card shadow border-0 my-4">
        <div class="card-header bg-secondary bg-gradient text-light py-4">
            <div class="row">
                <div class="col-12 text-center">
                    <h3>Assign Developer</h3>

                </div>
            </div>
        </div>
        <div class="card-body">

            <a style="font-size:small" asp-action="Details" asp-controller="Projects"
               asp-route-id="@Model.Ticket.ProjectId">Project: @Model.Ticket.Project.Name</a>
            <div class="card mt-2">
                <div class="card-header">
                    <label class="control-label">Assign Developer to Ticket</label>
                </div>
                <div class="card-body">
                    <form asp-action="AssignDeveloper" sp-controller="Tickets" method="post">
                        <input type="hidden" asp-for="Ticket.Id" />
                        <p>Title: @Model.Ticket.Title</p>
                        <p>Description: @Html.Raw(Model.Ticket.Description)</p>
                        <div class="form-group">
                            <label class="form-label"> Select Developers</label>
                            <select required asp-for="DeveloperId" class="form-control" asp-items="@Model.Developers">
                                <option></option>
                            </select>
                        </div>
                        <div class="form-group mt-3">
                            <input type="submit" value="Assign" class="btn btn-primary" />
                        </div>
                    </form>
                </div>
            </div>
            <a class="btn btn-outline-info btn-sm mt-2" asp-action="UnassigendTickets" asp-controller="Tickets">Back <i class="bi bi-x-circle"></i></a>
        </div>

    </div>
</div>