@model TheBugTracker.Models.ViewModels.ProjectMembersViewModel

@{
    ViewData["Title"] = "Assign Members";
}



<div>

    <div class="card shadow border-0 my-4">
        <div class="card-header bg-secondary bg-gradient text-light py-4">
            <div class="row">
                <div class="col-12 text-center">
                    <h3 class="text-white text-uppercase">Assign team members for: </h3>
                    <p>@Model.Project.Name</p>
                </div>
            </div>
        </div>
        <div class="card-body">
            <form method="post" asp-action="AssignMembers" asp-controller="Projects">
                <input type="hidden" asp-for="@Model.Project.Id" />
                <div class="col-12 mb-3">
                    <div class="form-group">
                        <select required asp-for="@Model.SelectedUsers" class="form-Control"
                                asp-items="@Model.Users" multiple="multiple">
                        </select>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-lg-offset-2 col-lg-10">
                        <input type="submit" class="btn btn-primary" value="Assign Users" />
                    </div>
                </div>
            </form>
            <a asp-action="Details" asp-controller="Projects" asp-route-id="@Model.Project.Id" class="mt-2 btn btn-outline-info btn-sm">Back to Details</a>
        </div>
        </div>

    </div>
</div>


